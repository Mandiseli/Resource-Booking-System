@model ResourceBookingSystem.Models.Booking
@{
    ViewData["Title"] = "Booking Details";
}
<h2>Booking Details</h2>
<dl class="row">
    <dt class="col-sm-2">Resource</dt>
    <dd class="col-sm-10">@Model.Resource?.Name</dd>
    <dt class="col-sm-2">Start</dt>
    <dd class="col-sm-10">@Model.StartTime</dd>
    <dt class="col-sm-2">End</dt>
    <dd class="col-sm-10">@Model.EndTime</dd>
    <dt class="col-sm-2">Booked By</dt>
    <dd class="col-sm-10">@Model.BookedBy</dd>
    <dt class="col-sm-2">Purpose</dt>
    <dd class="col-sm-10">@Model.Purpose</dd>
</dl>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
